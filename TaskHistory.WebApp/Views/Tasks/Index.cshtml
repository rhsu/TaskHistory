<div class='container app-content'
		 ng-controller='TaskListsController'>
	<div ng-if='featureEnabled.list'>
		<form class='form-inline'>
			<div class='form-group'>
				<!-- TODO Something else besides &nbsp please-->
				<label>New List:</label>&nbsp;
				<input class='form-control'
							 ng-model='formData.name'
							 type='text'>
			</div>
			<button class='btn btn-success'
						  ng-click='pageFns.createTaskList()'>
				<span class='glyphicon glyphicon-plus'></span>
			</button>
		</form>

		<!-- Rendering Tasks with Lists Here-->
		<div>{{ pageData.taskListWithTasks }}</div>
		<div class='container app-content'>
				<ul>
					<li ng-repeat='list in pageData.taskListWithTasks'>

						<span class='btn-group'>
							<!-- collapse -->
							<button class='btn btn-xs btn-default'>
								<span class='glyphicon glyphicon-minus'></span>
							</button>

							<!-- add task to list -->
							<button class='btn btn-xs btn-success'
											ng-hide='list.showAddTaskForm'
											ng-click='list.showAddTaskForm = true'>
								<span class='glyphicon glyphicon-plus'></span>
							</button>

							<!-- sync -->
							<button class='btn btn-xs btn-info'>
								<span class='glyphicon glyphicon-refresh'></span>
							</button>

							<!-- update -->
							<button class='btn btn-xs btn-default'>
								<span class='glyphicon glyphicon-pencil'></span>
							</button>

							<!-- delete -->
							<button class='btn btn-xs btn-danger'>
								<span class='glyphicon glyphicon-trash'></span>
							</button>
						</span>

						<label>{{ list.listName }}</label>

						<form class='form-inline' style='margin-bottom: 15px;'
									ng-show='list.showAddTaskForm'>
							<div class='form-group'>
								<label>Add New Task For <span style='color: #2aabd2;'>{{ list.listName }}</span>:</label>
								<input class='form-control input-sm'
											 type='text'
											 ng-model='list.taskFormName'
											 required='true' >
								<button class='btn btn-sm btn-success'
												ng-click='pageFns.createTaskOnList(list.listId, list.taskFormName);'>
									<span class='glyphicon glyphicon-plus'></span>
								</button>
								<button class='btn btn-sm btn-primary'
												ng-click='list.showAddTaskForm = false'
												type='button'>
									<span class='glyphicon glyphicon-arrow-left'></span>
								</button>
							</div>
						</form>

						<div style='border: 2px solid red; margin: 5px; '>
							<task-list-add-task-form
								list-name='list.listName'
								list-id='list.listId'
								task-content='list.taskFormName'></task-list-add-task-form>
						</div>

						<div class='well'
								 ng-hide="list.tasks.length">list contains no tasks.</div>
						<task-table tasks='list.tasks'></task-table>
					</li>
				</ul>
		</div>
		<!-- end render -->
	</div>
</div>

<div class='container app-content' ng-controller='TasksController'>
	<form class='form-inline'>
		<div class='form-group'>
			<label>New Task:</label>
			<input class='form-control'
						 ng-model='formData.taskContent'
						 type='text'
						 required='true'>
		</div>
		<button class='btn btn-success'
						ng-click='pageFns.insertTask()'>
			<span class='glyphicon glyphicon-plus'></span>
		</button>
	</form>

	<div class='app-content'>
		<button class='btn btn-info'
				ng-click='pageFns.refreshTasks();'>
			<span class='glyphicon glyphicon-refresh'></span>
		</button>
	</div>

	<div class='app-content'>
		<div ng-hide="pageData.tasks.length">There are no tasks.</div>
		<task-table tasks='pageData.tasks'></task-table>
	</div>

</div>
