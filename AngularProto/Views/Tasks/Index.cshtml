<div class='container' ng-controller='TasksController' style='padding-top: 25px'>
	<form class='form-inline'>
		<div class='form-group'>
			<label>Task:</label>
			<input class='form-control' 
				ng-model='formData.taskContent' 
				type='text'
				required='true'>
		</div>
		<button class='btn btn-default' 
			ng-click='pageFns.insertTask()'>Create Task</button>
	</form>

	<div style='padding-top: 25px'>
	<button class='btn btn-info'>Refresh</button>
	</div>
		
	<div style='padding-top: 25px'>
		<div ng-hide="pageData.tasks.length">There are no tasks.</div>
		<table class="table table-striped table-hover table-bordered" 
				ng-show="pageData.tasks.length">
			<tr>
				<th>
					<input type='checkbox' />
				</th>
				<th>#</th>
				<th>Task</th>
				<th></th>
			</tr>
			<tr ng-repeat="task in pageData.tasks">
				<td><input type='checkbox' /></td>
				<td>{{ $index+1 }}</td>
				<td>
					<div ng-hide="task.isDeleted">
						{{task.taskContent}}
					</div>
					<div style='text-decoration: line-through'
						 ng-show='task.isDeleted'>
						{{task.taskContent}}
					</div>
				</td>
				<td>
					<button class='btn btn-default'
						ng-click=''>Edit</button>
					<button class='btn btn-default'
						ng-hide='task.isDeleted'
						ng-click='task.setConfirmDelete(true)'>Delete</button>
					<button class='btn btn-danger'
						ng-show='task.isConfirmDelete'
						ng-click='pageFns.deleteTask(task.taskId)'>Are you sure?</button>
					<button class='btn btn-primary'>Undo</button>
				</td>
			</tr>
		</table>
	</div>
</div>