<div class='container' ng-controller='TasksController' style='padding-top: 25px'>
	<form class='form-inline'>
		<div class='form-group'>
			<label>Task:</label>
			<input class='form-control' 
				ng-model='formData.taskContent' 
				type='text'
				required='true'>
		</div>
		<button class='btn btn-default' 
			ng-click='pageFns.insertTask()'>Create Task</button>
	</form>

	<p>{{pageData.tasks}}</p>
</div>