<div class='container' ng-controller='TasksController' style='padding-top: 25px'>
	<form class='form-inline'>
		<div class='form-group'>
			<label>Task:</label>
			<input class='form-control' 
				ng-model='formData.taskContent' 
				type='text'
				required='true'>
		</div>
		<button class='btn btn-default' 
			ng-click='pageFns.insertTask()'>Create Task</button>
	</form>
	
	<div style='padding-top: 25px'>
		<div ng-hide="pageData.tasks.length">There are not tasks.</div>
		<table class="table table-striped table-hover table-bordered" 
				ng-show="pageData.tasks.length">
			<tr>
				<th>
					<input type='checkbox' />
				</th>
				<th>#</th>
				<th>Task</th>
				<th></th>
			</tr>
			<tr ng-repeat="task in pageData.tasks">
				<td><input type='checkbox' /></td>
				<td>{{ $index+1 }}</td>
				<td>{{task.TaskContent}}</td>
				<td>
					<button class='btn btn-default'
						ng-click='pageFns.deleteTask(task.TaskId)'>Delete</button>
				</td>
			</tr>
		</table>
	</div>
</div>