<div class='container' style='padding-top: 25px' ng-controller='FeatureFlagsController'>
	<form class='form-inline'>
		<div class='form-group'>
			<label>Name:</label>
			<input class='form-control' 
                   ng-model='formData.name'
                   type='text'
                   required='true'>
		</div>
		<div class='form-group'>
			<label>Value:</label>
			<input class='form-control'
                   ng-model='formData.value'
                   type='text'>
		</div>
		<button class='btn btn-success'
                ng-click='pageFns.createFlag()'>
			<span class='glyphicon glyphicon-plus'></span>
		</button>
	</form>

	<div style='padding-top: 25px'></div>
	
    <div>{{ pageData.flags.count}}</div>
    
    <div ng-hide='pageData.flags.length'>There are not flags.</div>
	<table ng-show='pageData.flags.length'
           class="table table-striped table-hover table-bordered">
		<tr ng-repeat='flag in pageData.flags'>
            <th>{{flag.id}}</th>
			<th>{{flag.name}}</th>
			<th>{{flag.value}}</th>
			<th></th>
			<th></th>
		</tr>
