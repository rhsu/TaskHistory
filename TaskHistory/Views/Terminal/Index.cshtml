@using TaskHistory

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TerminalResponseObject

<div class="container" style="padding-top: 10px">
	<div>@Model.ResponseSummary</div>
	
	@using(Html.BeginForm("SubmitCommand", "Terminal", FormMethod.Post, new { @class = "form-inline", 
		@style = "padding-top: 25px; padding-bottom: 25px;"}))
	{
		<div class="form-group">
			<!-- TODO https://github.com/rhsu/TaskHistory/issues/62-->
			@Html.TextBox("command", null, new { @class = "form-control", @required = "required"})
		</div>

		<button type="submit" class="btn btn-default">Insert</button>
	}
</div>