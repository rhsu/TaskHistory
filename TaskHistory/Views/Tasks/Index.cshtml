@using TaskHistory.Api.Tasks

@model IEnumerable<ITask>

<head>
	<link rel='stylesheet' href='/Content/bootstrap.css'/>		
	<link rel='stylesheet' href='/Content/bootstrap-theme.css'/>

	<title>Tasks</title>
</head>
<body>
@{ Html.RenderPartial("InsertTask"); }

@if (Model.Count() > 0)
{
	<table class="table table-striped table-bordered" style="margin-left: 2.5%">
		<tr>
			<th><input type='checkbox' /></th>
			<th>#</th>
			<th>Content</th>
		</tr>

		@for (int i = 0; i < Model.Count(); i++)
		{
		<tr>
			<td>
				<input type='checkbox' />
			</td>
			<td>@(i+1)</td>	
			<td>@Model.ElementAt(i).Content</td>
		</tr>
		}

	</table>
}
else 
{
	<div style="padding-top: 15px; padding-left: 2.5%">You have no tasks</div>
}
</body>