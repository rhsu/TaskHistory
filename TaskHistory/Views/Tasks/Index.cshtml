@using TaskHistory.Api.Tasks

@model IEnumerable<ITask>

<head>
	<link rel="stylesheet" href="/Content/bootstrap.css"/>		
	<link rel="stylesheet" href="/Content/bootstrap-theme.css"/>
	<script src="/Scripts/jquery-2.2.2.js"></script>
	<script src="/Scripts/Tasks/index.js"></script>

	<title>Tasks</title>
</head>
<body>
@{ Html.RenderPartial("InsertTask"); }

@if (Model.Count() > 0)
{
	<table class="table table-striped table-bordered" style="margin-left: 2.5%">
		<tr>
			<th><input id="task-checkbox-master" type="checkbox" /></th>
			<th>#</th>
			<th>Content</th>
		</tr>

		@for (int i = 0; i < Model.Count(); i++)
		{
		<tr>
			<td>
				<input class="task-checkbox" type="checkbox" />
			</td>
			<td>@(i+1)</td>	
			<td>@Model.ElementAt(i).Content</td>
		</tr>
		}

	</table>
}
else 
{
	<div style="padding-top: 15px; padding-left: 2.5%">You have no tasks</div>
}
</body>