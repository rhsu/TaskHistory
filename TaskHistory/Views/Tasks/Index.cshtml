@using TaskHistory.Api.Tasks

@model IEnumerable<ITask>

@{ Html.RenderPartial("InsertTask"); }

@if (Model.Count() > 0)
{
	<table>
		<tr>
			<th><input type='checkbox' /></th>
			<th>#</th>
			<th>Content</th>
		</tr>

		@for (int i = 0; i < Model.Count(); i++)
		{
		<tr>
			<td>
				<input type='checkbox' />
			</td>
			<td>@(i+1)</td>	
			<td>@Model.ElementAt(i).Content</td>
		</tr>
		}

	</table>
}
else 
{
	<div>You have no tasks</div>
}